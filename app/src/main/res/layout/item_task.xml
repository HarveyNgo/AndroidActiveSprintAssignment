<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_task_fl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_task_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true">
                <ImageView
                    android:id="@+id/item_task_iv_task_type"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_story"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/item_task_iv_priority"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_arrow_green"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_task_tv_assignee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="assignee"/>
                <ImageView
                    android:id="@+id/item_task_iv_avatar"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/ic_avatar"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>